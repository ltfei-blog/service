{
  "compilerOptions": {
    "allowJs": true,
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "esnext",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": "packages",
    "typeRoots": ["node_modules/@types", "../node_modules/@types"],
    "types": ["node"],
    "skipLibCheck": true
  },
  "include": ["./*"]
}
