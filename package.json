    "build": "pnpm -C build exec webpack"
  },
  "keywords": [],
  "author": "ltfei<ltfei@ltfei.cn>",
  "license": "MIT",
  "repository": "https://github.com/ltfei-blog/service",
  "workspaces": [
    "packages/*",
    "build"
  ],
  "lint-staged": {
    "*.{vue,js,ts,jsx,tsx,md,json}": "prettier --write"
  },
  "config": {
